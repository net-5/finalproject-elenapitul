@model Conference.Domain.Entities.Speakers

<div class="col-sm-12 col-lg-3 child" style="background-image: url('~/img/person.jpg');">

    <div class="details">
        <a class="link" href="/@Model.Edition/speakers/@Model.FirstName-@Model.LastName">
            <span class="name">@Model.FirstName @Model.LastName</span>
            <span class="position">@Model.Position, @Model.CompanyName</span>

        </a>
        <ul class="speaker-socials">
            <li>
                <a target="_blank" class="link d-inline" href="@Model.Twitter">
                    <i class="fab fa-twitter"></i>
                </a>
            </li>


        </ul>


    </div>

</div>

